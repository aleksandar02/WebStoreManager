@using WebStoreManager.ViewComponents
@{
    ViewData["Title"] = "Index";
}
<div id="admin">
    <div class="container">
        <h2 class="text-center h2-responsive">Administrator</h2>

        @{
            if (ViewBag.Message == "Product successfully deleted!")
            {
                <div class="deleteMessage light-green lighten-2 text-white p-3 align-content-center shadow-sm" id="deleteMessage">
                    <h5><i class="fa fa-check"></i>&nbsp;&nbsp;@ViewBag.Message</h5>
                </div>
            }
            if (ViewBag.Message == "Post successfully edited!")
            {
                <div class="deleteMessage light-green lighten-2 text-white p-3 align-content-center shadow-sm" id="deleteMessage">
                    <h5><i class="fa fa-check"></i>&nbsp;&nbsp;@ViewBag.Message</h5>
                </div>
            }
            if (ViewBag.Message == "Post successfully deleted!")
            {
                <div class="deleteMessage light-green lighten-2 text-white p-3 align-content-center shadow-sm" id="deleteMessage">
                    <h5><i class="fa fa-check"></i>&nbsp;&nbsp;@ViewBag.Message</h5>
                </div>
            }
            if (ViewBag.Message == "Some error occurred!")
            {
                <div class="deleteMessage light-green lighten-2 text-white p-3 align-content-center shadow-sm" id="deleteMessage">
                    <h5><i class="fa fa-check"></i>&nbsp;&nbsp;@ViewBag.Message</h5>
                </div>
            }
        }



        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active text-black-50" data-toggle="tab" data-target="#blogPosts" role="tab">Blog posts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-black-50" data-toggle="tab" data-target="#blogPostComments" role="tab">Blog post comments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-black-50" data-toggle="tab" data-target="#products11" role="tab">Products</a>
            </li>
        </ul>

        <br />

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="blogPosts" role="tabpanel">@await Component.InvokeAsync(nameof(GetPostsForAdmin))</div>
            <div class="tab-pane fade" id="blogPostComments" role="tabpanel">Blog post comments</div>
            <div class="tab-pane fade" id="products11" role="tabpanel">@await Component.InvokeAsync(nameof(GetProductsForAdmin))</div>
        </div>

    </div>
</div>

<br />